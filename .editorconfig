# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{css,scss,js,html}]
indent_size = 2
max_line_length = 140

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
